@model UserViewModel
<body style="background: rgb(218, 187, 131);">
    <div class="container py">
        <div class="main-body">
            <div>
                <div class="mb-3" style=" display:flex; justify-content:center">
                    <div class="card" style=" background:#20e1a8; min-height:380px; min-width: 575.984px; max-height:380px; max-width: 575.984px">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                @if (Model.Sex == 0)
                                {
                                    <img src="~/images/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                }
                                else
                                {
                                    <img src="~/images/avatar8.png" alt="Admin" class="rounded-circle" width="150">

                                }
                                <div class="mt-3">
                                    <h4>
                                        @($"{Model.FirstName} {Model.LastName}")
                                    </h4>
                                    <p class="text-secondary mb-1">@($"Email: {Context.User.Identity.Name}")</p>
                                    <br />
                                    <a asp-action="Logout" asp-controller="Account">
                                        <button class="btn btn-primary">Logout</button>
                                    </a>
                                    <a asp-action="GetOrders" asp-controller="AccountProfile">
                                        <button class="btn btn-primary">Get Orders</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8" style="margin-left:18%;">
                    <div class="card mb-3" style=" background:#20e1a8">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9">
                                    @($"{Model.FirstName} {Model.LastName}")
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9">
                                    @Model.Email
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Phone</h6>
                                </div>
                                <div class="col-sm-9">
                                    @Model.Phone
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Sex</h6>
                                </div>
                                <div class="col-sm-9">
                                    @Model.Sex
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Birth Date</h6>
                                </div>
                                <div class="col-sm-9">
                                    @Model.BirthDate.ToLongDateString()
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Age</h6>
                                </div>
                                <div class="col-sm-9">
                                    @Model.Age
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <a class="btn btn-info " asp-action="ChangeProfile" asp-controller="AccountProfile">Edit</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</body>