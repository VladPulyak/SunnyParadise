@model HotelDto
<div class="py">
    <body style="background: rgb(218, 187, 131);">
        <p style="text-align: center;font-size: 38px;font-style: italic;margin-bottom: 21px;">Add Hotel</p>
        <div></div>
        <form method="post" asp-action="AddHotel" asp-controller="AccountProfile">
            <div class="container">
                <div class="row" style="margin: 6px;">
                    <div class="col-md-6" style="background: #b3f9a2;border-width: 6px;border-radius: 7px;"><label class="col-form-label">Name</label></div>
                    <div class="col-md-6"><input class="form-control" type="text" style="border-width: 6px;border-radius: 6px;" asp-for="Name"></div>
                </div>
                <div class="row" style="margin: 6px;">
                    <div class="col-md-6" style="background: #b3f9a2;border-width: 6px;border-radius: 7px;"><label class="col-form-label">Country</label></div>
                    <div class="col-md-6"><input class="form-control" type="text" style="border-width: 6px;border-radius: 6px;" asp-for="Country"></div>
                </div>
                <div class="row" style="margin: 6px;">
                    <div class="col-md-6" style="background: #b3f9a2;border-width: 6px;border-radius: 7px;"><label class="col-form-label">City</label></div>
                    <div class="col-md-6"><input class="form-control" type="text" style="border-width: 6px;border-radius: 6px;" asp-for="City"></div>
                </div>
                <div class="row" style="margin: 6px;">
                    <div class="col-md-6" style="background: #b3f9a2;border-width: 6px;border-radius: 7px;"><label class="col-form-label">CountOfRooms</label></div>
                    <div class="col-md-6"><input class="form-control" type="number" style="border-width: 6px;border-radius: 6px;" asp-for="CountOfRooms"></div>
                </div>
                <div class="row" style="margin: 6px;">
                    <div class="col-md-6" style="background: #b3f9a2;border-width: 6px;border-radius: 7px;"><label class="col-form-label">StandartPrice</label></div>
                    <div class="col-md-6"><input class="form-control" type="number" style="border-width: 6px;border-radius: 6px;" asp-for="StandartPrice"></div>
                </div>
                <div class="row" style="margin: 6px;">
                    <div class="col-md-6" style="background: #b3f9a2;border-width: 6px;border-radius: 7px;"><label class="col-form-label">LuxPrice</label></div>
                    <div class="col-md-6"><input class="form-control" type="number" style="border-width: 6px;border-radius: 6px;" asp-for="LuxPrice"></div>
                </div>
            </div>
            <div class="d-flex justify-content-center" style="margin-top: 20px;"><button class="btn btn-primary d-flex justify-content-center" type="submit">Add</button></div>
        </form>
        <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    </body>
</div>
