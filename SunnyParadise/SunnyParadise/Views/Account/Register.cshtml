@model RegisterModel
<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <link href="/docs/5.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="apple-touch-icon" href="/docs/5.2/assets/img/favicons/apple-touch-icon.png" sizes="180x180">
    <link rel="icon" href="/docs/5.2/assets/img/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="icon" href="/docs/5.2/assets/img/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
    <link rel="manifest" href="/docs/5.2/assets/img/favicons/manifest.json">
    <link rel="mask-icon" href="/docs/5.2/assets/img/favicons/safari-pinned-tab.svg" color="#7952b3">
    <link rel="icon" href="/docs/5.2/assets/img/favicons/favicon.ico">
    <meta name="theme-color" content="#7952b3">
    <link href="modals.css" rel="stylesheet">
</head>
<body class="bd-placeholder-img">
    <div class="modal modal-signin position-static d-block py-5" tabindex="-1" role="dialog" id="modalSignin">
        <div class="modal-dialog" role="document">
            <div class="modal-content rounded-5 shadow">
                <div class="modal-header p-5 pb-4 border-bottom-0">
                    <h2 class="fw-bold mb-0">Sign-up</h2>
                </div>

                <div class="modal-body p-5 pt-0">
                    <form asp-action="Register" asp-controller="Account" method="post">
                        <div asp-validation-summary="All">
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control rounded-4" id="Login" placeholder="Login" asp-for="Login">
                                <label asp-for="Login">Login</label>
                                @Html.ValidationMessageFor(q=>q.Login)
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control rounded-4" id="FirstName" placeholder="FirstName" asp-for="FirstName">
                                <label asp-for="FirstName">FirstName</label>
                                @Html.ValidationMessageFor(q=>q.FirstName)
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control rounded-4" id="LastName" placeholder="LastName" asp-for="LastName">
                                <label asp-for="LastName">LastName</label>
                                @Html.ValidationMessageFor(q=>q.LastName)
                            </div>
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control rounded-4" id="Age" placeholder="Age" asp-for="Age">
                                <label asp-for="Age">Age</label>
                                @Html.ValidationMessageFor(q=>q.Age)
                            </div>
                            <div class="form-floating mb-3">
                                <input type="date" class="form-control rounded-4" id="BirthDate" placeholder="BirthDate" asp-for="BirthDate">
                                <label asp-for="BirthDate">BirthDate</label>
                                @Html.ValidationMessageFor(q=>q.BirthDate)
                            </div>
                            <div class="mb-3">
                                <label asp-for="Sex">Sex</label>
                                @Html.ValidationMessageFor(q=>q.Sex)
                            </div>
                            <div class="mb-3">
                                <input type="radio" class="rounded-4" id="Male" name="Sex" asp-for="Sex" value="Male">
                                <label asp-for="Sex">Male</label>
                            </div>
                            <div class="mb-3">
                                <input type="radio" class="rounded-4" id="Female" name="Sex" asp-for="Sex" value="Female">
                                <label asp-for="Sex">Female</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control rounded-4" id="Password" placeholder="Password" asp-for="Password">
                                <label asp-for="Password">Password</label>
                                @Html.ValidationMessageFor(q=>q.Password)
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control rounded-4" id="ConfirmPassword" placeholder="ConfirmPassword" asp-for="ConfirmPassword">
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                @Html.ValidationMessageFor(q=>q.ConfirmPassword)
                            </div>
                            <button class="w-100 mb-2 btn btn-lg rounded-4 btn-primary" type="submit">Sign up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/docs/5.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>